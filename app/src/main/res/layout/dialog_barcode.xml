<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_dialog"
    android:paddingBottom="20dp"

    >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close"
        android:background="@android:color/transparent"
        android:id="@+id/closeImageButton"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="130dp"
                android:id="@+id/barcodeImageView"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/barcodeTextView"
                android:textSize="15sp"
                android:textColor="@color/colorMainBackground"
                android:gravity="center"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_oan"
            android:textColor="@color/colorSplashBackground"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:visibility="gone"
            android:id="@+id/noCardTextView"/>

    </FrameLayout>




</LinearLayout>