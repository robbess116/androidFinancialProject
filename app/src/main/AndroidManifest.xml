<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sproutonecard.rechargeandreward">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.BaseActivity" />
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.LandingPageActivity" />
        <activity
            android:name=".ui.activity.ManageAccountActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.activity.RequestRefundActivity"
            android:windowSoftInputMode="stateVisible|adjustResize"

            />
        <activity android:name=".ui.activity.RedeemActivity" />
         <activity android:name=".ui.activity.AddValueActivity" />
        <activity android:name=".ui.activity.ManageProfileActivity" />
        <activity android:name=".ui.activity.AddFundingSourceActivity" />
        <activity android:name=".ui.activity.AddAccountActivity" />
        <activity android:name=".ui.activity.RegisterNewUserActivity" />
        <activity android:name=".ui.activity.ConfirmPhonePinActivity" />
    </application>

</manifest>